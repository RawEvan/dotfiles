root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.{c,cc,cpp,h}]
indent_style = space
indent_size = 2
max_line_length = 80

[*.py]
indent_style = space
indent_size = 4
max_line_length = 100

[*.js]
indent_style = space
indent_size = 2
max_line_length = 100

[*.java]
indent_style = space
indent_size = 4
max_line_length = 100

[*.gradle]
indent_style = space
indent_size = 4

[*.cs]
indent_style = space
indent_size = 4
max_line_length = 100

[*.{cake,ps1,psm1}]
indent_style = space
indent_size = 4

[.gitconfig]
indent_style = tab

[Makefile]
indent_style = tab
