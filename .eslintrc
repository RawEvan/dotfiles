{
  "extends": ["eslint:recommended", "google"],
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "globals": {
    "console": true,
    "module": true,
    "require": true
  },
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "arrow-parens": ["error", "as-needed"],
    "no-console": ["error", {
       "allow": ["warn", "error"]
    }]
  }
}
